<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OrdersApp.Vistas.ProductoPage"
             Title="{Binding Codigo}">

    <ContentPage.Content>
        <StackLayout Padding="10">
            <Label Text="{Binding Descripcion}" FontAttributes="Bold" />
            <Label Text="{Binding Presentacion, StringFormat='Presentación: {0}'}" />
            <Label Text="{Binding Marca, StringFormat='Marca: {0}'}" />

            <Label Text="{Binding Stock, StringFormat='Stock disponible: {0}'}" HorizontalOptions="End" />
            <Label Text="{Binding Precio, StringFormat='Precio: {0:S/ 0.00}'}" HorizontalOptions="End" />
        </StackLayout>
    </ContentPage.Content>

</ContentPage>