<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OrdersApp.Vistas.MenuPage"
             Title="Menú">

    <ContentPage.Content>
        <StackLayout Padding="20">
            <Label Text="{Binding WelcomeMessage}" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" />
            <Button Text="Pedidos" Clicked="OnPedidosButtonClicked" HorizontalOptions="FillAndExpand" Margin="0,10,0,0" BackgroundColor="#FF9800" TextColor="White" CornerRadius="5"/>
            <Button Text="Clientes" Clicked="OnClientesButtonClicked" HorizontalOptions="FillAndExpand" Margin="0,10,0,0" BackgroundColor="#2196F3" TextColor="White" CornerRadius="5"/>
            <Button Text="Productos" Clicked="OnProductosButtonClicked" HorizontalOptions="FillAndExpand" Margin="0,10,0,0" BackgroundColor="#4CAF50" TextColor="White" CornerRadius="5"/>
            <Button Text="Avances" Clicked="OnAvancesButtonClicked" HorizontalOptions="FillAndExpand" Margin="0,10,0,0" BackgroundColor="#FF6961" TextColor="White" CornerRadius="5"/>
        </StackLayout>
    </ContentPage.Content>

</ContentPage>